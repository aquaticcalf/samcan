{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "sourceMap": true,
        "declarationMap": true,
        "stripInternal": true,
        "allowImportingTsExtensions": false
    },
    "include": [
        "index.ts",
        "core/**/*.ts",
        "wrapper/**/*.ts",
        "wrapper/**/*.tsx"
    ],
    "exclude": ["test", "**/*.test.ts", "docs", ".scripts"]
}
